<h1>Editing Book</h1>

<%= form_with model: @book, url: "/books/#{@book.id}", local:true do |f| %>
  <%= render 'layouts/error_books', model: f.object %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit 'Update Book' %></p>
  <p>
  <% end %>


<%= link_to 'Show', @book, class: "show_#{@book.id}" %> |
<%= link_to 'Back', books_path, class: "back" %>
